{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "import",
    "flowtype",
    "mocha-no-only",
    "flowtype-errors"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "amd": true,
    "commonjs": true
  },
  "globals": {
    "should": true,
    "sinon": true
  },
  "rules": {
    "mocha-no-only/mocha-no-only": [
      "error"
    ],
    "flowtype-errors/show-errors": [
      "error"
    ]
  }
}
