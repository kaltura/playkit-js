{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "import",
    "flowtype"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "amd": true,
    "commonjs": true
  },
  "globals": {
    "should": true,
    "sinon": true
  }
}
