{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "import",
    "flowtype",
    "mocha-no-only"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "amd": true,
    "commonjs": true
  },
  "globals": {
    "should": true,
    "sinon": true
  },
  "rules": {
    "flowtype/no-types-missing-file-annotation": "off",
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "mocha-no-only/mocha-no-only": [
      "error"
    ]
  }
}
