    "babel-register": "^6.23.0",
    "chai": "^3.5.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.28.4",
    "eslint": "^3.10.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-mocha-no-only": "^0.0.5",
    "flow-bin": "latest",
    "istanbul": "^0.4.5",
